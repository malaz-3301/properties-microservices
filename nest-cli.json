{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth-micro": {
      "type": "application",
      "root": "apps/auth-micro",
      "entryFile": "main",
      "sourceRoot": "apps/auth-micro/src",
      "compilerOptions": {
        "assets": [
          {
            "include": "../../../libs/contracts/src/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/auth-micro"
          }
        ],
        "tsConfigPath": "apps/auth-micro/tsconfig.app.json"
      }
    },
    "automation-analytics-micro": {
      "type": "application",
      "root": "apps/automation-analytics-micro",
      "entryFile": "main",
      "sourceRoot": "apps/automation-analytics-micro/src",
      "compilerOptions": {
        "assets": [
          {
            "include": "../../../libs/contracts/src/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/automation-analytics-micro"
          }
        ],
        "tsConfigPath": "apps/automation-analytics-micro/tsconfig.app.json"
      }
    },
    "commerce-micro": {
      "type": "application",
      "root": "apps/commerce-micro",
      "entryFile": "main",
      "sourceRoot": "apps/commerce-micro/src",
      "compilerOptions": {
        "assets": [
          {
            "include": "../../../libs/contracts/src/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/commerce-micro"
          }
        ],
        "tsConfigPath": "apps/commerce-micro/tsconfig.app.json"
      }
    },
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    },
    "notifications-micro": {
      "type": "application",
      "root": "apps/notifications-micro",
      "entryFile": "main",
      "sourceRoot": "apps/notifications-micro/src",
      "compilerOptions": {
        "assets": [
          {
            "include": "../../../libs/contracts/src/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/notifications-micro"
          }
        ],
        "tsConfigPath": "apps/notifications-micro/tsconfig.app.json"
      }
    },
    "properties-micro": {
      "type": "application",
      "root": "apps/properties-micro",
      "entryFile": "main",
      "sourceRoot": "apps/properties-micro/src",
      "compilerOptions": {
        "assets": [
          {
            "include": "../../../libs/contracts/src/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/properties-micro"
          }
        ],
        "tsConfigPath": "apps/properties-micro/tsconfig.app.json"
      }
    },
    "reports-micro": {
      "type": "application",
      "root": "apps/reports-micro",
      "entryFile": "main",
      "sourceRoot": "apps/reports-micro/src",
      "compilerOptions": {
        "assets": [
          {
            "include": "../../../libs/contracts/src/i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/reports-micro"
          }
        ],
        "tsConfigPath": "apps/reports-micro/tsconfig.app.json"
      }
    },
    "users-micro": {
